<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/songLL">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#f2f2f2"
        android:layout_gravity="center"
        app:cardElevation="1dp"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/slidingpanelimage"
            android:id="@+id/songImage"/>
        <com.taishi.library.Indicator
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:bar_num="6"
            android:background="@color/transparent_black_hex_5"
            android:visibility="gone"
            android:id="@+id/MusicIndicator"
            app:bar_color="@color/colorAccent"
            app:step_num="10"
            app:duration="3000" />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="left"
            android:gravity="left"
            android:id="@+id/songName"
            android:maxLines="1"
            android:text="asdfasdf"
            android:textColor="@color/transparent_black_percent_90"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/tab_indicator_text"
            android:text="adad"
            android:id="@+id/artistName"
            android:layout_margin="2dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:background="@color/transparent_black_hex_1"
            android:layout_height="1dp"/>
    </LinearLayout>
    </LinearLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:flexWrap="wrap"
        android:visibility="gone"
        app:alignItems="flex_start"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/flexLayout"
        android:layout_marginTop="5dp"
        app:alignContent="flex_start">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:id="@+id/playLL"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"
                android:id="@+id/playIV"
                android:src="@android:drawable/ic_media_play"
                android:tint="@color/colorAccent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Play"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:id="@+id/shuffleLL"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"
                android:id="@+id/shuffleIV"
                android:tint="@color/colorAccent"
                android:src="@drawable/shuffle"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Shuffle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:id="@+id/mostPlayedLL"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/mpIV"
                android:padding="7dp"
                android:tint="@color/colorAccent"
                android:src="@drawable/most"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Most Played"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:id="@+id/totalSongsLL"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"
                android:id="@+id/totalSongsIV"
                android:visibility="gone"
                android:tint="@color/colorAccent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/totalSongsTextView"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="123 songs"/>
        </LinearLayout>

    </com.google.android.flexbox.FlexboxLayout>
</RelativeLayout>