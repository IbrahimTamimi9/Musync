<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/songLL">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#f2f2f2"
            android:layout_gravity="center"
            app:cardElevation="1dp"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:textSize="16sp"
                android:text="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/postionTV"/>
            <com.taishi.library.Indicator
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:bar_num="6"
                android:background="@color/transparent_black_hex_5"
                android:visibility="gone"
                android:id="@+id/MusicIndicator"
                app:bar_color="@color/colorAccent"
                app:step_num="10"
                app:duration="3000" />
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:gravity="left"
                android:id="@+id/songName"
                android:maxLines="1"
                android:text="asdfasdf"
                android:textColor="@color/transparent_black_percent_90"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/tab_indicator_text"
                android:text="adad"
                android:id="@+id/artistName"
                android:layout_margin="2dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:background="@color/transparent_black_hex_1"
                android:layout_height="1dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>